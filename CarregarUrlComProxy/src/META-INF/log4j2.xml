<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" name="MyApp" packages="">
  <Appenders>
    <RollingFile name="RollingFile" fileName="carregar_url.log"
                 filePattern="carregar_url_%d{yyyy-MM-dd}-%i.log.gz">
      <PatternLayout>
        <Pattern>%d %p (%F:%L) [%t] %m%n</Pattern>
      </PatternLayout>
      
      <Policies>
        <TimeBasedTriggeringPolicy />
        <SizeBasedTriggeringPolicy size="50 MB"/>
      </Policies>
      
      <DefaultRolloverStrategy max="5"/>
      
    </RollingFile>
  </Appenders>
  
  <Loggers>
    <Root level="info">
      <AppenderRef ref="RollingFile"/>
    </Root>
  </Loggers>
  
</Configuration>